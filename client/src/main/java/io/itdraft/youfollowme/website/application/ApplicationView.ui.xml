<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="res" type="io.itdraft.youfollowme.website.resources.AppResources"/>

    <ui:style>
        .margin-left-100 {
            margin-left: 100px;
        }
    </ui:style>

    <g:HTMLPanel styleName="{res.style.container}">
        <g:HTMLPanel styleName="{res.style.wrapper}">
            <g:SimplePanel ui:field="statusPanel"/>
            <g:HorizontalPanel>
                <g:SimplePanel ui:field="categoryNavbarPanel"/>
                <g:SimplePanel ui:field="timeRangeNavbarPanel" styleName="{style.margin-left-100}"/>
            </g:HorizontalPanel>
            <g:SimplePanel ui:field="mainContentPanel"/>
            <div class="{res.style.push}"/>
        </g:HTMLPanel>
        <g:HTMLPanel styleName="{res.style.footer}"/>
    </g:HTMLPanel>
</ui:UiBinder>